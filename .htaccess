ErrorDocument 404 /404

RewriteEngine On
#RewriteCond %{SCRIPT_FILENAME} !-d

RewriteRule ^lessons/([^\.]+).html$ /$1 [R=permanent,L]
RewriteRule ^reviews$ /testimonials [R=permanent,L]
RewriteRule ^([a-z-]+).html$ /$1 [R=permanent,L]
RewriteRule ^index$ / [R=permanent,L]
RewriteRule ^([a-z-]+)/?$ /index.php?page=$1 [NC,L]


AddDefaultCharset UTF-8

DirectoryIndex index.html index.php
Options -Indexes
#************** Expires Control **************************
ExpiresActive On
ExpiresDefault A0

FileETag MTime Size

<FilesMatch "\.(gif|jpg|JPG|jpeg|png|PNG|swf|ico)$">
    # 2 weeks
    ExpiresDefault A1209600 
    Header append Cache-Control "public"
</FilesMatch>

<FilesMatch "\.(xml|txt|html)$">
    # 2 hours
    ExpiresDefault A7200 
    Header append Cache-Control "proxy-revalidate"
</FilesMatch>

<FilesMatch "\.(js|css)$">
    # 7 days
    ExpiresDefault A604800 
    Header append Cache-Control "proxy-revalidate"
</FilesMatch>
#************** End Expires Control **************************



# compress text, html, javascript, css, xml:
AddOutputFilterByType DEFLATE text/plain
AddOutputFilterByType DEFLATE text/html
AddOutputFilterByType DEFLATE text/xml
AddOutputFilterByType DEFLATE text/css
AddOutputFilterByType DEFLATE application/xml
AddOutputFilterByType DEFLATE application/xhtml+xml
AddOutputFilterByType DEFLATE application/rss+xml
AddOutputFilterByType DEFLATE application/javascript
AddOutputFilterByType DEFLATE application/x-javascript